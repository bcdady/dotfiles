#!${SHELL}
# Configure git global settings
echo "Starting ${0}"
echo ""
echo "Displaying git global settings:"
echo "---"
git config --global --list | grep -v ^alias

echo ""
echo "To update git config globally: \`git config --global user.email user@domain.tld\`"
echo "To update git config for a specific repo: \`git config --local --add user.email user@domain.tld\`"
